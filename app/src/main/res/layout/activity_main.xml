<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mz_zy.ipbluetooth.MainActivity">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:text="Device Name:" />



    <TextView
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@id/tv_name"
        android:padding="10dp"
        android:textColor="#000000"
        android:text="None" />


    <TextView
        android:id="@+id/tv_btaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@+id/tv_name"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="Bluetooth Address:" />


    <TextView
        android:id="@+id/tv_btaddr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@id/tv_btaddr"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="None" />


    <TextView
        android:id="@+id/tv_remoteaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@+id/tv_btaddr"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="Remote IP Address:" />



    <TextView
        android:id="@+id/tv_remoteaddr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_remoteaddr"
        android:padding="10dp"
        android:layout_below="@+id/tv_btaddr"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="None" />



    <TextView
        android:id="@+id/tv_localaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@+id/tv_remoteaddr"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="Local IP Address:" />


    <TextView
        android:id="@+id/tv_localaddr_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toRightOf="@+id/tv_localaddr"
        android:layout_below="@+id/tv_remoteaddr"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="None" />

    <Button
        android:id="@+id/ipconn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_localaddr"
        android:text="Set" />


</RelativeLayout>
